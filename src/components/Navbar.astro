---
import "../styles/global.css";

const links = [
  { href: "#about", number: "01.", text: "Sobre mí" },
  { href: "#work", number: "02.", text: "Experiencia" },
  { href: "#contact", number: "03.", text: "Contacto" },
];

const linkClass =
  "px-6 py-3 hover:bg-white/10 transition rounded-md font-dev flex gap-1";
---

<nav class="bg-[#1E1B29] text-white px-6 py-4 flex items-center justify-between">
  <!-- Logo -->
  <div class="text-2xl font-bold font-dev">MiPortafolio</div>

  <!-- Links -->
  <ul class="hidden md:flex gap-3 items-center whitespace-nowrap">
    {links.map(link => (
      <li>
        <a href={link.href} class={linkClass}>
          <span class="text-gray-200">{link.number}</span>
          <span>{link.text}</span>
        </a>
      </li>
    ))}

    <!-- Resume distinto -->
    <li class="inline-flex">
      <a
        href="/resume"
        class="px-6 py-2 border-2 border-white rounded-md relative overflow-hidden
               transition-all duration-300 ease-out
               hover:bg-white hover:text-[#1E1B29] hover:-translate-x-1 font-dev"
      >
        Resume
      </a>
    </li>

  </ul>

  <!-- Botón móvil -->
  <button class="md:hidden text-2xl px-3 py-2 rounded-md hover:bg-white/10 transition">
    ☰
  </button>
</nav>
